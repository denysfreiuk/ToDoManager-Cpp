/* === üå§ MAIN WINDOW === */
QMainWindow {
    background-color: #f7f8fa;
    color: #222;
    font-family: "Segoe UI", "Roboto", "Noto Sans", sans-serif;
    font-size: 15px;
}

/* === –¶–ï–ù–¢–†–ê–õ–¨–ù–ò–ô –í–Ü–î–ñ–ï–¢ === */
QWidget#centralwidget {
    background-color: #f7f8fa;
}

/* === üè∑–ó–∞–≥–æ–ª–æ–≤–∫–∏ === */
QLabel#titleLabel, QLabel#headerLabel {
    color: #1a1a1a;
    font-size: 22px;
    font-weight: 600;
    text-align: center;
}

/* === –°–ø–∏—Å–æ–∫ –∑–∞–≤–¥–∞–Ω—å === */
QListWidget {
    background-color: #ffffff;
    border: 1px solid #e1e4ea;
    border-radius: 12px;
    padding: 8px;
}
QListWidget::item:hover {
    background: transparent;
}
QListWidget::item:selected {
    background: rgba(108, 99, 255, 0.1);
    border-radius: 10px;
}

/* === TaskItemWidget === */
QWidget#TaskItemWidget {
    background-color: #ffffff;
    border: 1px solid #e1e4ea;
    border-radius: 12px;
    padding: 10px 14px;
    margin: 8px 6px;
    transition: all 0.25s ease;
}
QWidget#TaskItemWidget:hover {
    border: 1px solid #d0d5e0;
    background-color: #fefefe;
    box-shadow: 0 3px 8px rgba(108,99,255,0.12);
}
QWidget#TaskItemWidget:focus-within {
    border: 1px solid #6c63ff;
    box-shadow: 0 0 8px rgba(108, 99, 255, 0.25);
}

/* –ö–Ω–æ–ø–∫–∏ –≤—Å–µ—Ä–µ–¥–∏–Ω—ñ –∫–∞—Ä—Ç–∫–∏ –Ω–µ –∑–∞–ª–∏–≤–∞—é—Ç—å —Ñ–æ–Ω –ø—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–Ω—ñ */
QWidget#TaskItemWidget QPushButton {
    background: transparent;
    color: #444;
    border: none;
    padding: 4px 8px;
    border-radius: 6px;
    font-weight: 500;
}

QWidget#TaskItemWidget QPushButton:hover {
    background-color: rgba(108,99,255,0.1);
    color: #2e2bff;
}


/* === –ö–Ω–æ–ø–∫–∏ === */
QPushButton {
    background-color: #f1f3f9;
    color: #333;
    border: 1px solid #d4d8e2;
    border-radius: 8px;
    padding: 8px 14px;
    font-weight: 500;
    transition: all 0.25s ease;
}
QPushButton:hover {
    background-color: #e8ebf7;
    border: 1px solid #b9c0f5;
    color: #2e2bff;
}
QPushButton:pressed {
    background-color: #dee2f2;
}
QPushButton:disabled {
    background-color: #f0f1f5;
    color: #999;
    border: 1px solid #e0e2e8;
}

/* ===  –ö–Ω–æ–ø–∫–∏ –≤—Å–µ—Ä–µ–¥–∏–Ω—ñ –∫–∞—Ä—Ç–æ–∫ === */
QWidget#TaskItemWidget QPushButton {
    background-color: transparent;
    color: #444;
    border: none;
    padding: 4px 8px;
    border-radius: 6px;
    font-weight: 500;
}
QWidget#TaskItemWidget QPushButton:hover {
    background-color: rgba(108,99,255,0.1);
    color: #2e2bff;
}

/* === ‚úè–ü–æ–ª—è –≤–≤–æ–¥—É === */
QLineEdit {
    background-color: #ffffff;
    border: 1px solid #d8dce6;
    border-radius: 8px;
    padding: 6px 10px;
    color: #222;
}
QLineEdit:focus {
    border: 1px solid #6c63ff;
    background-color: #fcfcff;
}

/* === –¢–µ–∫—Å—Ç–æ–≤—ñ –ø–æ–ª—è === */
QTextEdit {
    background-color: #ffffff;
    border: 1px solid #d8dce6;
    border-radius: 8px;
    padding: 8px 10px;
    color: #222;
}
QTextEdit:focus {
    border: 1px solid #6c63ff;
    background-color: #fcfcff;
}

/* === DateEdit (–∑ –∫–∞–ª–µ–Ω–¥–∞—Ä–µ–º) === */
QDateEdit {
    background-color: #ffffff;
    border: 1px solid #d8dce6;
    border-radius: 8px;
    padding: 6px 8px;
    color: #222;
}
QDateEdit::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 24px;
    border-left: 1px solid #d8dce6;
    background-color: #f1f3f9;
}
QDateEdit::down-arrow {
    image: url(:/icons/calendar.svg);
    width: 14px;
    height: 14px;
    margin-right: 6px;
}
QDateEdit:focus {
    border: 1px solid #6c63ff;
}

/* ===  ComboBox === */
QComboBox {
    background-color: #ffffff;
    border: 1px solid #d8dce6;
    border-radius: 8px;
    padding: 6px 10px;
    color: #222;
}
QComboBox:hover {
    border: 1px solid #b9b4ff;
}
QComboBox:focus {
    border: 1px solid #6c63ff;
}
QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 24px;
    border-left: 1px solid #d8dce6;
    background-color: #f1f3f9;
}
QComboBox::down-arrow {
    image: url(:/icons/arrow_down.svg);
    width: 12px;
    height: 12px;
    margin-right: 6px;
}
QComboBox QAbstractItemView {
    background-color: #ffffff;
    border: 1px solid #d8dce6;
    selection-background-color: #e8ebf7;
    selection-color: #2e2bff;
    border-radius: 6px;
}

/* === ToolBox === */
QToolBox {
    background-color: #ffffff;
    border: 1px solid #d8dce6;
    border-radius: 10px;
}
QToolBox::tab {
    height: 60px;
    padding-left: 14px;
    padding-right: 10px;
    padding-top: 5px;
    padding-bottom: 5px;
    font-size: 14px;
    qproperty-iconSize: 20px;

    background-color: #f1f3f9;
    border: 1px solid #d8dce6;
    border-radius: 8px;
    margin: 4px;
    color: #333;
    font-weight: 500;
}
QToolBox::tab:selected {
    background-color: #e8ebf7;
    border: 1px solid #b9c0f5;
    color: #2e2bff;
}

/* ===  CheckBox === */
QCheckBox {
    color: #222;
    spacing: 6px;
}
QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border-radius: 3px;
    border: 1px solid #999;
    background: #fff;
}
QCheckBox::indicator:checked {
    background-color: #6c63ff;
    border: 1px solid #6c63ff;
}

/* ===  TableWidget === */
QTableWidget {
    background-color: #ffffff;
    border: 1px solid #d8dce6;
    border-radius: 8px;
    gridline-color: #e0e0e0;
    color: #222;
}
QHeaderView::section {
    background-color: #f1f3f9;
    color: #333;
    font-weight: 600;
    border: none;
    border-bottom: 1px solid #d8dce6;
    padding: 6px;
}

/* ===  ScrollBar === */
QScrollBar:vertical {
    background: #f1f2f5;
    width: 10px;
    border-radius: 5px;
}
QScrollBar::handle:vertical {
    background: #c4c8d4;
    border-radius: 5px;
}
QScrollBar::handle:vertical:hover {
    background: #a9aee0;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
    background: none;
}

/* === Ô∏è StatusBar === */
QStatusBar {
    background-color: #f1f2f6;
    color: #555;
    border-top: 1px solid #dcdfe5;
}



















/* === QToolBox ‚Äî —Å—Ç–∏–ª—å–Ω–∞ –≤–µ—Ä—Å—ñ—è === */
QToolBox {
    background-color: #ffffff;
    border: 1px solid #d8dce6;
    border-radius: 10px;
    margin: 6px;
}

/* === –í–∫–ª–∞–¥–∫–∏ ToolBox === */
QToolBox::tab {
    background-color: #f6f7fb;
    border: 1px solid #e0e3ec;
    border-radius: 8px;
    font-weight: 500;
    color: #333;
    qproperty-iconSize: 18px;
    text-align: left;
}

/* === –ü—Ä–∏ –Ω–∞–≤–µ–¥–µ–Ω–Ω—ñ === */
QToolBox::tab:hover {
    background-color: #eef0fa;
    border: 1px solid #cfd3ff;
    color: #2e2bff;
}

/* === –ê–∫—Ç–∏–≤–Ω–∞ (–≤—ñ–¥–∫—Ä–∏—Ç–∞) –≤–∫–ª–∞–¥–∫–∞ === */
QToolBox::tab:selected {
    background-color: #e8ebf7;
    border: 1px solid #b9c0f5;
    color: #2e2bff;
    font-weight: 600;
    box-shadow: 0 2px 6px rgba(108, 99, 255, 0.1);
}

/* === –ö–æ–Ω—Ç–µ–Ω—Ç –≤—Å–µ—Ä–µ–¥–∏–Ω—ñ === */
QToolBox QWidget {
    background-color: #ffffff;
    border-top: 1px solid #e4e7ef;
    padding: 10px 12px;
}

/* === –°–∫—Ä–æ–ª–±–∞—Ä —É—Å–µ—Ä–µ–¥–∏–Ω—ñ ToolBox (—è–∫—â–æ —î) === */
QToolBox QScrollBar:vertical {
    background: #f1f2f5;
    width: 8px;
    border-radius: 4px;
}
QToolBox QScrollBar::handle:vertical {
    background: #c4c8d4;
    border-radius: 4px;
}
QToolBox QScrollBar::handle:vertical:hover {
    background: #a9aee0;
}
