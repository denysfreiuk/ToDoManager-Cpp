    border: 1px solid #6ea8fe;
    background-color: #fefeff;
}

/* === üîò QPushButton === */
QPushButton {
    background-color: #e9eef6;
    color: #1b2838;
    border: 1px solid #c6d4ef;
    border-radius: 6px;
    padding: 6px 14px;
    font-weight: 500;
    transition: all 0.2s ease-in-out;
}
QPushButton:hover {
    background-color: #d7e4fb;
}
QPushButton:pressed {
    background-color: #c6d4ef;
}
QPushButton:disabled {
    background-color: #e0e4ec;
    color: #999;
}

/* === ‚öôÔ∏è QComboBox (View Filter) === */
QComboBox {
    background-color: #ffffff;
    border: 1px solid #cdd6e1;
    border-radius: 6px;
    padding: 6px 10px;
    min-width: 130px;
}
QComboBox:hover {
    border: 1px solid #6ea8fe;
}
QComboBox::drop-down {
    border: none;
    width: 24px;
}
QComboBox::down-arrow {
    image: url(:/icons/down-arrow.png);
    width: 10px;
    height: 10px;
}

/* === üì¶ QGroupBox / –ü–∞–Ω–µ–ª—ñ === */
QGroupBox {
    border: 1px solid #d0dae7;
    border-radius: 6px;
    margin-top: 8px;
    background-color: #fdfdff;
}
QGroupBox::title {
    subcontrol-origin: margin;
    left: 8px;
    padding: 0 4px;
    color: #3b4b65;
}

/* === ü™ü QScrollBar (–∫—Ä–∞—Å–∏–≤–∏–π) === */
QScrollBar:vertical {
    background: #f0f4fa;
    width: 10px;
    border-radius: 5px;
}
QScrollBar::handle:vertical {
    background: #c3d4ee;
    min-height: 25px;
    border-radius: 5px;
}
QScrollBar::handle:vertical:hover {
    background: #a9c3f2;
}
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
}

/* === ‚úÖ Checkboxes / RadioButtons === */
QCheckBox {
    spacing: 6px;
}
QCheckBox::indicator {
    width: 16px;
    height: 16px;
}
QCheckBox::indicator:unchecked {
    border: 1px solid #aabbd5;
    border-radius: 4px;
    background: #ffffff;
}
QCheckBox::indicator:checked {
    background-color: #6ea8fe;
    border: 1px solid #6ea8fe;
    image: url(:/icons/checkmark.png);
}
